{
  "name": "wb-extensions",
  "version": "1.0.0",
  "manifest_version": 3,
  "description": "Test works BP",
  "content_scripts": [
    {
      "matches": [
        "https://www.wildberries.ru/catalog/*"
      ],
      "run_at": "document_idle",
      "js": [
        "index.js"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "tabs",
    "bookmarks",
    "webRequest"
  ],
  "host_permissions": [
    "https://www.wildberries.ru/catalog/*"
  ],
  "icons": {
    "16": "graph.png",
    "32": "graph.png",
    "48": "graph.png",
    "128": "graph.png"
  }
}
